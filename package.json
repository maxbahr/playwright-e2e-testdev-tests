{
  "name": "playwright-e2e-tests",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "pretest": "eslint . --ext .ts && prettier . --check && tsc --noEmit",
    "format": "prettier \"**/*.{ts,js,mjs,cjs,json,md,yml,yaml}\" --write",
    "format:check": "prettier . --check",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:ui": "playwright test src/tests/ui",
    "test:api": "playwright test src/tests/api"
  },
  "keywords": [
    "playwright",
    "tests",
    "e2e",
    "typescript"
  ],
  "author": "Maksymilian Bahr",
  "license": "MIT",
  "description": "Playwright test framework in TypeScript",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@types/dotenv": "^6.1.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^24.3.1",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^2.2.2",
    "moment": "^2.30.1",
    "prettier": "3.6.2",
    "typescript-eslint": "^8.43.0"
  }
}
